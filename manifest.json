{
    "manifest_version": 2,
    "name": "Open Links Outside Tab Group",
    "version": "1.0.1",
    "description": "When a link is opened from a grouped tab, the new tab is placed directly after that group.",
    "permissions": ["tabs", "tabGroups"],
    "background": { "scripts": ["background.js"] },
    "icons": {
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "open-links-outside-group@alexmartishin",
            "strict_min_version": "138.0"
        }
    },
    "homepage_url": "https://github.com/martishin/firefox-open-links-outside-tab-group"
}
